{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<h1>Categories</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ category.id }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ category.nom }}</td>
			</tr>
			<tr>
				<th>Slug</th>
				<td>{{ category.slug }}</td>
			</tr>
			<tr>
				<th>Couleur</th>
				<td>{{ category.couleur }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ category.description }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_educateur_categories_index') }}">back to list</a>

	<a href="{{ path('app_educateur_categories_edit', {'id': category.id}) }}">edit</a>

	{{ include('educateur/categories/_delete_form.html.twig') }}
{% endblock %}
