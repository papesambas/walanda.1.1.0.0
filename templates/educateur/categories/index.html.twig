{% extends 'base.html.twig' %}

{% block title %}Categories index
{% endblock %}

{% block body %}
	<h1>Categories index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Nom</th>
				<th>Niveau</th>
				<th>Couleur</th>
				<th>Description</th>
				<th>CreatedAt</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.nom }}</td>
					<td>{{ category.niveau }}</td>
					<td>{{ category.couleur }}</td>
					<td>{{ category.description }}</td>
					<td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
					<td>
						<a href="{{ path('app_educateur_categories_show', {'id': category.id}) }}">show</a>
						<a href="{{ path('app_educateur_categories_edit', {'id': category.id}) }}">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('app_educateur_categories_new') }}">Create new</a>
{% endblock %}
