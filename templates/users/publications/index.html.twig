{% extends 'users/base.html.twig' %}

{% block title %}Publications index
{% endblock %}

{% block body %}
	<div class="container">
		<h1>Publications index</h1>

		<table class="table">
			<thead>
				<tr>
					<th>Titre</th>
					{# <th>Slug</th> #}
					<th>Contenu</th>
					{# <th>IsActive</th> #}
					<th>IsFavorit</th>
					<th>CreatedAt</th>
					{# <th>UpdatedAt</th> #}
					<th>actions</th>
				</tr>
			</thead>
			<tbody>
				{% for publication in publications %}
					<tr>
						<td>{{ publication.titre }}</td>
						{# <td>{{ publication.slug }}</td> #}
						<td class="col-6">{{ publication.contenu |u.truncate(150,'...',false)|raw}}</td>
						{# <td>{{ publication.isActive ? 'Yes' : 'No' }}</td> #}
						<td>{{ publication.isFavorit ? 'Yes' : 'No' }}</td>
						<td>{{ publication.createdAt ? publication.createdAt|date('Y-m-d') : '' }}</td>
						{# <td>{{ publication.updatedAt ? publication.updatedAt|date('Y-m-d H:i:s') : '' }}</td> #}
						<td>
							<a href="{{ path('app_publications_show', {'id': publication.id}) }}">show</a>
							{# <a href="{{ path('app_publications_edit', {'id': publication.id}) }}">edit</a> #}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="11">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

		<a href="{{ path('app_publications_new') }}">Create new</a>
	</div>
{% endblock %}
